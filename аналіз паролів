import string

WEAK_PASSWORDS = [
    "password", "admin", "123456", "12345678", "123456789",
    "qwerty", "abc123", "111111", "admin123", "password1",
    "monkey", "dragon", "letmein", "welcome"
]


users = {
    "ivan": "123456",
    "anna": "Qwerty123",
    "petro": "password",
    "olga": "Abc123!",
    "admin": "admin",
    "user1": "StrongPass!9"
}

def is_too_short(password):
    return len(password) < 8

def has_upper(password):
    return any(c.isupper() for c in password)

def has_lower(password):
    return any(c.islower() for c in password)

def has_digit(password):
    return any(c.isdigit() for c in password)

def has_special(password):
    return any(c in string.punctuation for c in password)

def is_from_weak_list(password):
    return password in WEAK_PASSWORDS

def password_status(password):
    if is_from_weak_list(password):
        return " Слабкий (поширений пароль)"

    if is_too_short(password):
        return " Слабкий (занадто короткий)"

    score = 0
    if has_upper(password):
        score += 1
    if has_lower(password):
        score += 1
    if has_digit(password):
        score += 1
    if has_special(password):
        score += 1

    if score <= 2:
        return " Слабкий (погана структура)"
    elif score == 3:
        return " Середній (можна покращити)"
    else:
        return " Надійний пароль"

def analyze_users(users_dict):
    print(" Аналіз паролів користувачів\n")

    for user, password in users_dict.items():
        status = password_status(password)
        print(f"Користувач: {user}")
        print(f"Пароль: {password}")
        print(f"Статус: {status}")
        print("-" * 40)

if __name__ == "__main__":
    analyze_users(users)



